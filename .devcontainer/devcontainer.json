{
  "name": "Codespace with Desktop + OpenTimer",
  "build": { "dockerfile": "Dockerfile", "context": ".." },
  "remoteUser": "vscode",
  "forwardPorts": [6080],
  "containerEnv": {
    "VNC_PASSWORD": "vsdiat"        // override from Codespaces Secrets for security
  },
  "postCreateCommand": "sudo mkdir -p /run/user/1000 && sudo chown vscode:vscode /run/user/1000",
  "customizations": {
    "vscode": {
      "extensions": ["ms-vscode.cpptools", "tcl-lang.tcl"]
    }
  }
}
