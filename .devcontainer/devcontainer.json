{
  "name": "VLSI Codespace (Magic, Netgen, Ngspice + Sky130 GUI)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "noVNC Desktop",
      "onAutoForward": "openBrowser"
    }
  },
  "overrideCommand": false,
  "remoteUser": "root",
  "containerEnv": {
    "PDK_ROOT": "/opt/pdk",
    "VOLARE_HOME": "/opt/volare",
    "DISPLAY": ":1"
  }
}
